- if @connected_authentications.present?
  %h2 Connected Authentications
  %table.table.table-bordered.table-hover
    %thead
      %tr
        %th Provider
        %th Created At
        %th Updated At
        %th Destroy
      %tbody
        - @connected_authentications.each do |authentication|
          %tr
            %td= link_to authentication.provider.capitalize, authentication_path(authentication)
            %td= authentication.created_at.strftime("%b %d, %Y %H:%M%p")
            %td= authentication.updated_at.strftime("%b %d, %Y %H:%M%p")
            %td= link_to 'Delete', authentication_path(authentication), :method => 'DELETE'

%br
%h2 Authentications Available In The App
%table.table.table-bordered.table-hover
  %thead
    %tr
      %th Provider
      %th Connected?
    %tbody
      - @possible_authentications.each do |provider|
        %tr
          %td= provider.capitalize
          - if already_authenticated?(provider)
            %td Yes
          - else
            %td= link_to "Connect #{provider.capitalize}", "/auth/#{provider}"



